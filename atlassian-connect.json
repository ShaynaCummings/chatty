{
    "key": "chatty",
    "name": "Chatty",
    "description": "An add-on replacement for several popular hubot scripts",
    "vendor": {
        "name": "HipChat",
        "url": "https://www.hipchat.com"
    },
    "links": {
        "self": "https://chatty-reddit.herokuapp.com/atlassian-connect.json",
        "homepage": "https://chatty-reddit.herokuapp.com"
    },
    "capabilities": {
        "hipchatApiConsumer": {
            "scopes": [
                "send_notification",
                "admin_room"
            ]
        },
        "installable": {
            "callbackUrl": "https://chatty-reddit.herokuapp.com/installable",
            "allowGlobal": false,
            "allowRoom": true

        },
        "configurable": {
             "url": "https://chatty-reddit.herokuapp.com/config"
        }
    }
}
