{
    "key": "chatty",
    "name": "Chatty",
    "description": "An add-on replacement for several popular hubot scripts",
    "vendor": {
        "name": "HipChat",
        "url": "https://www.hipchat.com"
    },
    "links": {
        "self": "{{localBaseUrl}}/atlassian-connect.json",
        "homepage": "{{localBaseUrl}}/atlassian-connect.json"
    },
    "capabilities": {
        "hipchatApiConsumer": {
            "scopes": [
                "send_notification"
            ]
        },
        "installable": {
            "callbackUrl": "{{localBaseUrl}}/installable",
            "allowGlobal": false,
            "allowRoom": true

        },
        "configurable": {
             "url": "{{localBaseUrl}}/config"
        }
    }
}
